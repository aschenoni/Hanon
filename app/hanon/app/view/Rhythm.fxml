<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="490.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hanon.app.controller.EvaluationController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="440.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <HBox alignment="BOTTOM_CENTER" prefHeight="51.0" prefWidth="490.0">
               <children>
                  <ImageView fx:id="readyImage" fitHeight="55.0" fitWidth="165.0" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets right="100.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
            </HBox>
             <Label fx:id="rhythmStatus" alignment="CENTER" prefHeight="38.0" prefWidth="184.0" text="Playing Rhythm...">
                 <font>
                   <Font size="20.0" />
                 </font>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
             </Label>
            <HBox alignment="TOP_RIGHT" prefHeight="25.0" prefWidth="345.0">
               <children>
                  <ToggleButton mnemonicParsing="false" onAction="#handlePlay">
                     <graphic>
                        <ImageView>
                           <image>
                              <Image url="@PlayButtonSmall.png" />
                           </image>
                        </ImageView>
                     </graphic></ToggleButton>
                  <ToggleButton mnemonicParsing="false">
                     <graphic>
                        <ImageView>
                           <image>
                              <Image url="@PauseButtonSmall.png" />
                           </image>
                        </ImageView>
                     </graphic></ToggleButton>
                  <ToggleButton fx:id="stopButton" mnemonicParsing="false" onAction="#handleStop">
                     <graphic>
                        <ImageView>
                           <image>
                              <Image url="@StopButtonSmall.png" />
                           </image>
                        </ImageView>
                     </graphic></ToggleButton>
                  <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label prefHeight="55.0" prefWidth="87.0" text="Tempo:">
                           <font>
                              <Font size="22.0" />
                           </font>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="tempoField" alignment="BOTTOM_RIGHT" prefHeight="25.0" prefWidth="63.0" />
                     </children>
                     <HBox.margin>
                        <Insets left="50.0" right="25.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
